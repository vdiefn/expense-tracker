<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><i class="fa-solid fa-sack-dollar"> 請輸入你的支出</i></h5>
          <hr>
          <form method="POST" action="/expenses">
            
            <div class="row mb-3 g-2">
              <label for="name" class="col-md-4 col-form-label">
                名稱
              </label>
              <div class="col-md-6 ">
                <input type="string" name="name" class="form-control" id="name" required>
              </div>
            </div>

            <div class="row mb-2 g-2 align-items-center">
              <label for="date" class="col-md-4 col-form-label">日期</label>
              <div class="col-md-8">
                <input type="date" id="date" name="date" required>
              </div>
            </div>


            <div class="row mb-2 g-2 align-items-center">
              <label for="category" class="col-md-4 col-form-label">類別</label>
              <div class="col-md-8">
                  <select name="category" id="category">
                    <option value="1">家居物業</option>
                    <option value="2">交通出行</option>
                    <option value="3">休閒娛樂</option>
                    <option value="4">餐飲食品</option>
                    <option value="5">其他</option>
                  </select>
              </div>
            
            </div>

            <div class="row mb-3 g-2 align-items-center">
              <label for="amount" class="col-md-4 col-form-label">金額</label>
              <div class="col-md-8">
                  <input type="number" id="amount" name="amount" min ='0' required>
              </div>
            </div>
            <div class="d-flex justify-content-end">
              <button class="btn btn-success mt-3" type="submit">Create</button>
            </div>
            
          </form>
        </div>

      </div>
    </div>
  </div>
</div>