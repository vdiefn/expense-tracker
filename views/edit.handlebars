<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><i class="fa-solid fa-sack-dollar"> 請輸入你的支出</i></h5>
          <hr>
          <form method="POST" action="/expenses/{{expense._id}}?_method=PUT">

            <div class="row mb-3 mt-2 g-2">
              <label for="name" class="col-md-4 col-form-label fs-5">
                名稱
              </label>
              <div class="col-md-6 ">
                <input type="string" name="name" class="form-control" id="name" style="width:250px; height:45px;" required value="{{expense.name}}">
              </div>
            </div>

            <div class="row mb-2 mt-2 g-2 align-items-center">
              <label for="date" class="col-md-4 col-form-label fs-5">日期</label>
              <div class="col-md-8">
                <input type="date" id="date" name="date" style="width:250px; height:45px; border-radius:5%; border-color:#D9D9D9; padding-left:10px;" required value="{{expense.date}}">
              </div>
            </div>


            <div class="row mb-2 mt-2 g-2 align-items-center">
              <label for="category" class="col-md-4 col-form-label fs-5">類別</label>
              <div class="col-md-8">
                <select name="category" id="category" style="width:250px; height:45px; border-radius:5%; border-color:#D9D9D9; padding-left:10px;" required>
                  <option value="" disabled selected>請選擇類別</option>
                  <option value="1">家居物業</option>
                  <option value="2">交通出行</option>
                  <option value="3">休閒娛樂</option>
                  <option value="4">餐飲食品</option>
                  <option value="5">其他</option>
                </select>
              </div>
            </div>
            

            <div class="row mb-3 mt-2 g-2 align-items-center">
              <label for="amount" class="col-md-4 col-form-label fs-5">金額</label>
              <div class="col-md-8">
                <input type="number" id="amount" name="amount" min='0' required value="{{expense.amount}}" style="width:250px; height:45px; border-radius:5%; border-color:#D9D9D9; padding-left:12px;">
              </div>
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btn-outline-success btn-sm me-2" type="submit">Save</button>
                <a class="btn btn-outline-primary btn-sm me-2" href="/" role="button">Back</a> 
                {{!-- <form action="/expenses/{{expense._id}}/delete" method="POST" style="display: inline;">
                  <button class="btn btn-outline-primary btn-sm me-2" type="submit">刪除</button>
                </form> --}}
            </div> 
          </form>
        </div>
      </div>
    </div>
  </div>
</div>